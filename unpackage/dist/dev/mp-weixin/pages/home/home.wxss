.good-body {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: space-evenly;
  -webkit-justify-content: space-evenly;
          justify-content: space-evenly;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.good-box {
  background: #fff;
  width: 47%;
  padding: 50rpx 20rpx;
  box-sizing: border-box;
  margin: 10rpx;
}
.good-box .good-img {
  width: 100%;
  margin-bottom: 15rpx;
}
.good-box .good-img image {
  width: 100%;
  height: 150px;
  display: block;
}

.home {
  background: #eee;
}
.home swiper {
  width: 750rpx;
  height: 380rpx;
}
.home swiper image {
  height: 100%;
  width: 100%;
}
.home .nav {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: space-evenly;
  -webkit-justify-content: space-evenly;
          justify-content: space-evenly;
  padding: 20rpx 0;
  background: #fff;
  margin-bottom: 20rpx;
}
.home .nav .nav-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  width: 20%;
}
.home .nav .nav-item .nav-top {
  width: 120rpx;
  height: 120rpx;
}
.home .nav .nav-item .nav-top image {
  width: 100%;
  height: 100%;
}
.home .hot-title {
  text-align: center;
  color: #b50e03;
  padding: 30rpx 0;
  background: #fff;
  letter-spacing: 20px;
  margin-bottom: 20rpx;
}

